# Cấu hình môi trường cho ứng dụng Backend Node.js

# Cấu hình cơ sở dữ liệu MongoDB
MONGODB_URI=mongodb://localhost:27017/backend_data
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@yourapp.com
SESSION_SECRET=your_super_secret_session_key_here
REDIS_URL=redis://localhost:6379
# Hoặc sử dụng MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/backend_data

# Cấu hình JWT (JSON Web Token)
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# Cấu hình server
PORT=3000
NODE_ENV=development

# Cấu hình admin mặc định (sẽ được tạo khi chạy seedAdmin.js)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=Admin@123456

# Cấu hình bảo mật
SESSION_SECRET=your_session_secret_here
CSRF_SECRET=your_csrf_secret_here

# Cấu hình rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cấu hình CORS
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Cấu hình logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cấu hình email (nếu cần gửi email)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password

# Cấu hình Redis (nếu sử dụng caching)
# REDIS_URL=redis://localhost:6379

# Cấu hình file upload
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=uploads/