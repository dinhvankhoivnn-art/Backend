# Environment variables cho testing
NODE_ENV=test

# Database
MONGODB_URI=mongodb://localhost:27017/test-backend

# JWT Secret cho testing
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only

# Server
PORT=3001
HOST=localhost

# Session
SESSION_SECRET=test-session-secret-for-testing

# Redis (nếu sử dụng)
REDIS_URL=redis://localhost:6379/1

# Email (test - không gửi email thật)
SMTP_HOST=smtp.test.com
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASS=test-password

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=error

# Rate Limiting (thư giãn hơn cho testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload (test)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/test

# Security (thư giãn hơn cho testing)
BCRYPT_SALT_ROUNDS=1
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# API Keys (test)
GOOGLE_API_KEY=test-google-api-key
FACEBOOK_APP_ID=test-facebook-app-id

# Feature Flags (cho testing)
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_ANALYTICS=false
ENABLE_CACHING=false

# Admin (cho testing)
DEFAULT_ADMIN_EMAIL=admin@test.com
DEFAULT_ADMIN_PASSWORD=AdminTest123!